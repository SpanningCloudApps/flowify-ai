{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src/",
          "test/"
        ]
      }
    }
  },
  "rules": {
    "import/prefer-default-export": "off",
    "require-jsdoc": "off",
    "no-await-in-loop": "off"
  }
}
